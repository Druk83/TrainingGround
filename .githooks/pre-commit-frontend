#!/bin/sh
# Frontend pre-commit hook

set -e

echo '[INFO] Running pre-commit checks for Frontend...'

if [ ! -d 'frontend' ]; then
  echo '[WARN] frontend/ directory not found, skipping checks'
  exit 0
fi

cd frontend

if [ ! -f 'package.json' ]; then
  echo '[WARN] frontend/package.json not found, skipping checks'
  exit 0
fi

npm run lint
npm run format:check
npm run type-check
npm audit --audit-level=moderate

echo '[SUCCESS] Frontend checks passed!'

