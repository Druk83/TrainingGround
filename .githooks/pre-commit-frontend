#!/bin/sh
# Frontend pre-commit hook

echo "[INFO] Running pre-commit checks for Frontend..."

if [ -d "frontend" ]; then
    cd frontend
    
    npm run lint || exit 1
    npm run format:check || exit 1
    npm run type-check || exit 1
    npm audit --audit-level=moderate || exit 1
    
    echo "[SUCCESS] Frontend checks passed!"
fi
