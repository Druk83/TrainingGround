# Конфигурация окружения для TrainingGround

# Окружение (development, test, staging, production)
NODE_ENV=development

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=changeme
MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@localhost:27017/trainingground
MONGODB_DATABASE=trainingground

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Rust API
RUST_API_PORT=8080
RUST_API_HOST=0.0.0.0
JWT_SECRET=your-secret-key-change-in-production

# Python Generator
PYTHON_API_PORT=9000
YANDEX_GPT_API_KEY=
YANDEX_GPT_FOLDER_ID=

# Frontend
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# Logging
LOG_LEVEL=info

# Feature Flags (для разработки)
ENABLE_SSO=false
ENABLE_YANDEX_GPT=true
ENABLE_ANTICHEAT=true
 
# Grafana admin password
GRAFANA_PASSWORD=
